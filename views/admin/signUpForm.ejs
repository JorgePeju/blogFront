<%- include('./templates/header.ejs') %>
<%- include('./templates/nav.ejs') %>

  <div>
    
    <form id="searchForm" action="/admin/signup" method="POST">

      <label class="buscar">Email:</label>
      <input type="text" name="email" id="searchInput" class="" placeholder="Email">

      <label class="buscar">Password:</label>
      <input type="password" name="password" id="searchInput" class="" placeholder="Password">

      <div class="botones"><button type="submit" class="admin">Enviar</button></div>

    </form>

  </div>

  <% if (typeof error !=='undefined' ) { %>

    <p class="error">
      <% if (error.code === 'auth/email-already-in-use') { %>

        Este correo ya ha sido registrado

      <% } else if (error.code === 'auth/invalid-email') { %>

        Introduzca un correo válido

      <% } else if (error.code === 'auth/weak-password') { %>

        Contraseña débil, debe tener al menos 6 caracteres

      <% } else { %>

        Algo salió mal

      <% } %>
      
    </p>
  
  <% } %>

  <%- include('./templates/footer.ejs') %>